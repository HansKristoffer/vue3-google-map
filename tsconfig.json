{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "/@src/*": ["src/*"]
    },
    "lib": ["es2020", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src", "docs", "themes", "src/env.d, "docs/.vitepress/env.d.ts".ts"]
}
